<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/xv2_symbolLbl"
        android:layout_marginLeft="25dp"
        android:layout_marginStart="25dp"
        android:layout_alignTop="@+id/xv2_changeLbl"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/white"
        android:id="@+id/xv2_changeLbl"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/white"
        android:id="@+id/xv2_percentLbl"
        android:layout_alignBaseline="@+id/xv2_nameLbl"
        android:layout_alignBottom="@+id/xv2_nameLbl"
        android:layout_alignLeft="@+id/xv2_changeLbl"
        android:layout_alignStart="@+id/xv2_changeLbl"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/xv2_nameLbl"
        android:layout_below="@+id/xv2_symbolLbl"
        android:layout_alignLeft="@+id/xv2_symbolLbl"
        android:layout_alignStart="@+id/xv2_symbolLbl" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/xv2_priceLbl"
        android:layout_marginTop="10dp"
        android:layout_marginRight="41dp"
        android:layout_marginEnd="41dp"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/xv2_percentLbl"
        android:layout_toStartOf="@+id/xv2_percentLbl"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/rstr_bid_name"
        android:id="@+id/xv2_bidView"
        android:layout_below="@+id/xv2_nameLbl"
        android:layout_alignLeft="@+id/xv2_nameLbl"
        android:layout_alignStart="@+id/xv2_nameLbl"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/rstr_ask_name"
        android:id="@+id/xv2_askView"
        android:layout_below="@+id/xv2_nameLbl"
        android:layout_alignLeft="@+id/xv2_priceLbl"
        android:layout_alignStart="@+id/xv2_priceLbl"/>


</RelativeLayout>